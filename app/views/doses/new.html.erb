<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <h1>Add ingredient to <%= @cocktail.name %></h1>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description  %>
        <%= f.association :ingredient, collection: Ingredient.all %>
        <%= f.submit "Add Ingredient", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
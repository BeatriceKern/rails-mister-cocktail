<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @cocktail.url %>);">
  <div class="container">
    <h1><%=@cocktail.name%></h1>
    <%= link_to 'Back', cocktails_path, class: "btn mt-3 btn-success" %>
  </div>
</div>

<%= link_to 'Add Ingredients', new_cocktail_dose_path(@cocktail), class: "btn btn-primary btn-block mx-auto mt-3"%>


<h2 class="text-center mt-5">Find below all ingredients needed to make <%= @cocktail.name %></h2>
<ul class="list-group mt-5 mb-5 w-25 mx-auto">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item" ><%= dose.description %> | 
    <%= dose.ingredient.name %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash destroy_dose"></i>
    <% end %>
    </li>
  <% end %>
</ul>


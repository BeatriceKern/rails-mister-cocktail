<div class="banner" style="background-image: url('<%= cl_image_path @cocktail.photo.key, crop: :fill %>') ">
  <div class="container">
    <h1><%=@cocktail.name%></h1>
    <%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail), class: "btn btn-primary btn-block w-25 mx-auto mt-3"%>
  </div>
</div>

<h2 class="text-center mt-5">Let's mix a <%= @cocktail.name %></h2>

<div class = "d-flex mt-5">
  <div class = "container text-center">
    <h3 class = "mb-5"><strong>Description</strong></h3>
    <p><%=@cocktail.description%></p>
  </div>

  <div class = "container text-center">
    <h3 class = "mb-5"><strong>Ingredients</strong></h3>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> | 
          <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_dose"></i>
          <% end %>
          </li>
        <% end %>
      </ul>
  </div>
</div>

